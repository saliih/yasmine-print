{% extends '::baseBack.html.twig' %}
{% form_theme form 'form_table_layout.html.twig' %}
{% block body %}

<div class="row-fluid">
    <div class="span12">
        <div class="box box-bordered">
            <div class="box-title">
                <h3><i class="icon-th-list"></i> Cat√©gorie {{ category.name }}</h3>
            </div>
            <div class="box-content nopadding">
                    {{ form_start(form, {'method': 'POST','attr': {'class': 'form-horizontal form-bordered'}}) }}

                {{ form_row(form.name) }}
                {{ form_row(form.act) }}
                {{ form_row(form.color) }}
                    <div class="form-actions">

                        <button type="submit" class="btn btn-primary">Save changes</button>
                        <button type="button" class="btn">Cancel</button>
                    </div>
                {{ form_widget(form._token) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>


{% endblock %}
{% block stylesheets %}

<link rel="stylesheet" href="{{ asset('back/css/plugins/colorpicker/colorpicker.css') }}">

<style type="text/css">


    .pick-a-color
    {
        height: 34px !important;
    }

</style>
{% endblock %}
{% block javascripts %}

<script src="{{ asset('back/js/plugins/colorpicker/bootstrap-colorpicker.js') }}"></script>

<script type="text/javascript">

    $(document).ready(function() {
        $('#main_backbundle_category_color').colorpicker();


    });

</script>
