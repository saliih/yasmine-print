{% extends '::base.html.twig' %}
{% block body %}
    <div class="page-title">
        <div class="container">
            <h2 class="text-right text-uppercase">Validation de commande</h2>
        </div>
    </div>
    <div class="container nos-produits">
        <div class="row">
            <div class="col-md-12">
                <div class="col-xs-12">
                    <div class="text-center">
                        <h2>Commande #{{ cmd.ref }}</h2>
                    </div>
                    <hr>
                    <div class="row">

                        <div class="col-xs-12 col-md-3 col-lg-3 pull-right">
                            <div class="panel panel-default height">
                                <div class="panel-heading">Détail du client</div>
                                <div class="panel-body">
                                    <strong>Client:</strong><br>
                                    {{ client }}<br> <strong>Téléphone:</strong><br>
                                    {{ client.phone }}<br><strong>Adresse:</strong><br>
                                    {{ client.adresse }}<br>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="text-center"><strong>Récapitulatif de la commande</strong></h3>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-condensed">
                                    <thead>
                                    <tr>
                                        <td><strong>Nom de produit</strong></td>
                                        <td class="text-center"><strong>Prix</strong></td>
                                        <td class="text-right"><strong>Total</strong></td>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% set total = 0 %}
                                    {% for item in panier %}
                                        {% set product = item['prod'] %}
                                        {% set plis = item['plis'] %}
                                        {% set opt = item['opt'] %}
                                        {% set total = total + opt %}
                                        <tr>
                                            <td>{{ product.name }} : pack de  {{ item['opt'] }}</td>
                                            <td class="text-center">{{ opt }}<sup>DT</sup></td>
                                            <td class="text-right">{{ opt }}<sup>DT</sup></td>
                                        </tr>
                                    {% endfor %}
                                    {#  <tr>
                                         <td class="highrow"></td>
                                         <td class="highrow text-center"><strong>Subtotal</strong></td>
                                         <td class="highrow text-right">$958.00</td>
                                     </tr>
                                    <tr>
                                         <td class="emptyrow"></td>
                                         <td class="emptyrow text-center"><strong>Shipping</strong></td>
                                         <td class="emptyrow text-right">$20</td>
                                     </tr>#}
                                    <tr>
                                        <td class="emptyrow"></td>
                                        <td class="emptyrow text-center"><strong>Total</strong></td>
                                        <td class="emptyrow text-right">{{ total }}<sup>DT</sup></td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}